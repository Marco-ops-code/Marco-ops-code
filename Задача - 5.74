import math
num_spheres = 12

initial_radius = 5

thickness = 0.5

volumes = []

for i in range(num_spheres):
    radius = initial_radius + i * thickness
    volume = (4/3) * math.pi * (radius ** 3)
    volumes.append(volume)

total_volume_cm3 = sum(volumes)

total_volume_liters = total_volume_cm3 / 1000

print(f"Общий объём двенадцати вложенных друг в друга сфер равен {total_volume_liters:.2f} litres.")
